<% content_for :title, "Presentations" %>

<div class="max-w-4xl mx-auto">
  <h1 class="text-4xl font-bold mb-6">Presentations</h1>
  
  <p class="mb-6 text-gray-700">Below are links to my conference presentations. Please feel free to download and use any of the material below.</p>
  
  <div class="mb-6 flex flex-col sm:flex-row gap-4">
    <div class="flex-1">
      <label for="conference_filter" class="block text-sm font-medium text-gray-700 mb-2">Filter by Conference:</label>
      <%= form_with url: presentations_path, method: :get, local: true, data: { turbo_frame: "presentations" }, class: "flex gap-2" do |f| %>
        <%= f.select :conference, options_for_select([["All Conferences", ""]] + @conferences.map { |c| [c, c] }, params[:conference]), {}, { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", onchange: "this.form.submit()" } %>
        <%= f.hidden_field :sort, value: params[:sort] %>
      <% end %>
    </div>
    <div class="flex-1">
      <label for="sort" class="block text-sm font-medium text-gray-700 mb-2">Sort by:</label>
      <%= form_with url: presentations_path, method: :get, local: true, data: { turbo_frame: "presentations" }, class: "flex gap-2" do |f| %>
        <%= f.select :sort, options_for_select([["Title", "title"]], params[:sort]), {}, { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", onchange: "this.form.submit()" } %>
        <%= f.hidden_field :conference, value: params[:conference] %>
      <% end %>
    </div>
  </div>
  
  <div id="presentations" class="space-y-8">
    <% @presentations.each do |presentation| %>
      <div class="border-b border-gray-200 pb-8 last:border-b-0">
        <h3 class="text-2xl font-semibold mb-2">
          <% if presentation.slides_url.present? %>
            <%= link_to presentation.title, presentation.slides_url, target: "_blank", rel: "noopener", class: "text-blue-600 hover:text-blue-800" %>
          <% else %>
            <%= presentation.title %>
          <% end %>
        </h3>
        
        <% if presentation.conference_presentations.any? %>
          <p class="text-gray-600 mb-2">
            <em>Presented at</em>
            <% presentation.conference_presentations.each_with_index do |cp, index| %>
              <% if cp.conference_url.present? %>
                <%= link_to cp.conference_name, cp.conference_url, target: "_blank", rel: "noopener", class: "text-blue-600 hover:text-blue-800" %>
              <% else %>
                <%= cp.conference_name %>
              <% end %>
              <%= "," unless index == presentation.conference_presentations.length - 1 %>
            <% end %>
          </p>
        <% end %>
        
        <p class="text-gray-700 mb-4"><%= presentation.abstract %></p>
        
        <% if presentation.github_url.present? %>
          <p>
            <%= link_to "GitHub Repo", presentation.github_url, target: "_blank", rel: "noopener", class: "text-blue-600 hover:text-blue-800 underline" %>
          </p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

