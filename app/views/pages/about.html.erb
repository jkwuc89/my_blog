<% content_for :title, "#{@bio.name}'s Bio" %>

<div class="max-w-5xl mx-auto">
  <h1 class="<%= h1_classes %>">About Me</h1>

  <div class="<%= markdown_classes %> mb-8">
    <%= render_markdown(@bio.content) if @bio.content.present? %>
  </div>

  <div class="mb-8">
    <h2 class="text-xl font-semibold mb-2">My Resume</h2>
    <p class="mb-2">
      <%= link_to "/documents/Keith Wedinger Resume.pdf", target: "_blank", rel: "noopener", class: "#{link_classes} inline-flex items-center gap-1" do %>
        Download/View
        <%= image_tag "download.svg", alt: "Download", class: "w-4 h-4" %>
      <% end %>
    </p>
  </div>

  <div>
    <h2 class="text-xl font-semibold mb-2">Contact Me</h2>
    <ul class="list-disc list-inside space-y-2">
      <% if @contact_info.email.present? %>
        <li>
          <%= link_to @contact_info.email, "mailto:#{@contact_info.email}", class: link_classes %>
        </li>
      <% end %>
      <% if safe_url(@contact_info.twitter_url) %>
        <li>X: <%= link_to "@jkwuc89", safe_url(@contact_info.twitter_url), target: "_blank", rel: "noopener", class: link_classes %></li>
      <% end %>
      <% if safe_url(@contact_info.github_url) %>
        <li>
          <%= link_to "GitHub", safe_url(@contact_info.github_url), target: "_blank", rel: "noopener", class: link_classes %>
        </li>
      <% end %>
      <% if safe_url(@contact_info.linkedin_url) %>
        <li>
          <%= link_to "LinkedIn", safe_url(@contact_info.linkedin_url), target: "_blank", rel: "noopener", class: link_classes %>
        </li>
      <% end %>
      <% if safe_url(@contact_info.untapped_url) %>
        <li>
          <%= link_to "Untappd", safe_url(@contact_info.untapped_url), target: "_blank", rel: "noopener", class: link_classes %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
