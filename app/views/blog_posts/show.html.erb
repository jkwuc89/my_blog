<% content_for :title, @blog_post.title %>

<div class="max-w-5xl mx-auto">
  <article>
    <h2 class="text-2xl font-bold text-blue-500 mb-3"><%= @blog_post.title %></h2>
    <h3 class="text-lg font-semibold text-gray-600 mb-3">
      <%= @blog_post.published_at&.strftime("%B %d, %Y") %>
    </h3>

    <div class="<%= markdown_classes %>">
      <%= render_markdown(@content) if @content.present? %>
    </div>
  </article>
</div>
