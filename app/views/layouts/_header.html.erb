<header class="fixed top-0 left-0 right-0 bg-white border-b border-gray-200 z-50">
  <div class="max-w-4xl mx-auto py-4">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between">
      <div class="mb-2 md:mb-0">
        <%= link_to root_path, class: "text-3xl font-bold text-blue-500 hover:underline" do %>
          <%= Bio.instance.name.presence || "Name" %>
        <% end %>
        <% if Bio.instance.brief_bio.present? %>
          <p class="text-lg text-gray-600 mt-1"><%= Bio.instance.brief_bio %></p>
        <% end %>
      </div>
      <nav class="flex space-x-4">
        <%= link_to "Blog", root_path, class: "text-blue-500 hover:underline px-3 py-2 rounded" %>
        <%= link_to "Presentations", presentations_path, class: "text-blue-500 hover:underline px-3 py-2 rounded" %>
        <%= link_to "About Me", about_path, class: "text-blue-500 hover:underline px-3 py-2 rounded" %>
      </nav>
    </div>
  </div>
</header>
