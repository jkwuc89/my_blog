<footer class="fixed bottom-0 left-0 right-0 bg-gray-200 border-t border-gray-300 z-50">
  <div class="container mx-auto px-5 py-4">
    <div class="flex justify-center space-x-6">
      <% if contact_info.email.present? %>
        <%= link_to "mailto:#{contact_info.email}", class: "hover:opacity-80 transition-opacity", title: "Email" do %>
          <%= image_tag "email.svg", alt: "Email", class: "w-6 h-6" %>
        <% end %>
      <% end %>

      <% if safe_url(contact_info.github_url) %>
        <%= link_to safe_url(contact_info.github_url), target: "_blank", rel: "noopener", class: "hover:opacity-80 transition-opacity", title: "GitHub" do %>
          <%= image_tag "github.svg", alt: "GitHub", class: "w-6 h-6" %>
        <% end %>
      <% end %>

      <% if safe_url(contact_info.linkedin_url) %>
        <%= link_to safe_url(contact_info.linkedin_url), target: "_blank", rel: "noopener", class: "hover:opacity-80 transition-opacity", title: "LinkedIn" do %>
          <%= image_tag "linkedin.svg", alt: "LinkedIn", class: "w-6 h-6" %>
        <% end %>
      <% end %>

      <% if safe_url(contact_info.twitter_url) %>
        <%= link_to safe_url(contact_info.twitter_url), target: "_blank", rel: "noopener", class: "hover:opacity-80 transition-opacity", title: "Twitter/X" do %>
          <%= image_tag "twitter.svg", alt: "Twitter/X", class: "w-6 h-6" %>
        <% end %>
      <% end %>

      <% if safe_url(contact_info.untapped_url) %>
        <%= link_to safe_url(contact_info.untapped_url), target: "_blank", rel: "noopener", class: "text-gray-600 hover:text-gray-900", title: "Untappd" do %>
          <%= image_tag "Untappd.svg", alt: "Untappd", class: "w-6 h-6" %>
        <% end %>
      <% end %>
    </div>
  </div>
</footer>
