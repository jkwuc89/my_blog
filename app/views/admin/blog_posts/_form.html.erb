<%= form_with model: [:admin, blog_post], local: true, class: "space-y-6" do |f| %>
  <% if blog_post.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded p-4">
      <h2 class="text-red-800 font-semibold mb-2">Errors:</h2>
      <ul class="list-disc list-inside text-red-700">
        <% blog_post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :title, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>
  
  <div>
    <%= f.label :slug, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :slug, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    <p class="mt-2 text-sm text-gray-500">Leave blank to auto-generate from title.</p>
  </div>
  
  <div>
    <%= f.label :content, "Content (Markdown)", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_area :content, rows: 20, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 font-mono text-sm" %>
    <p class="mt-2 text-sm text-gray-500">You can use Markdown formatting here.</p>
  </div>
  
  <div>
    <%= f.label :published_at, "Published At", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.datetime_local_field :published_at, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    <p class="mt-2 text-sm text-gray-500">Leave blank to save as draft.</p>
  </div>
  
  <div class="flex gap-4">
    <%= f.submit blog_post.persisted? ? "Update Blog Post" : "Create Blog Post", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
    <%= link_to "Cancel", blog_post.persisted? ? admin_blog_post_path(blog_post) : admin_blog_posts_path, class: "px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300" %>
  </div>
<% end %>

