<% content_for :title, @blog_post.title %>

<div class="max-w-5xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-4xl font-bold"><%= @blog_post.title %></h1>
    <div class="flex gap-2">
      <%= link_to "Edit", edit_admin_blog_post_path(@blog_post), class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
      <%= link_to "Back", admin_blog_posts_path, class: "px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300" %>
    </div>
  </div>

  <div class="bg-white border border-gray-200 rounded-lg p-6 space-y-4">
    <div>
      <strong>Filename:</strong> <%= @blog_post.filename %>
    </div>

    <div>
      <strong>Published Date:</strong>
      <%= @blog_post.published_at.present? ? @blog_post.published_at.strftime("%B %d, %Y") : "Not published" %>
    </div>

    <div>
      <strong>Content:</strong>
      <div class="prose max-w-none mt-2">
        <% content = BlogPostFileReader.read_content(@blog_post.filename) %>
        <%= render_markdown(content) if content.present? %>
      </div>
    </div>
  </div>
</div>
