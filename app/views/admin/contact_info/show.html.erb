<% content_for :title, "Contact Info" %>

<div class="max-w-5xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Contact Info</h1>
    <%= link_to "Edit", edit_admin_contact_info_path, class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  </div>

  <div class="bg-white border border-gray-200 rounded-lg p-6 space-y-4">
    <div>
      <strong>Email:</strong> <%= @contact_info.email %>
    </div>
    <div>
      <strong>GitHub:</strong> <%= safe_url(@contact_info.github_url) ? link_to(@contact_info.github_url, safe_url(@contact_info.github_url), target: "_blank", rel: "noopener", class: link_classes) : "Not set" %>
    </div>
    <div>
      <strong>LinkedIn:</strong> <%= safe_url(@contact_info.linkedin_url) ? link_to(@contact_info.linkedin_url, safe_url(@contact_info.linkedin_url), target: "_blank", rel: "noopener", class: link_classes) : "Not set" %>
    </div>
    <div>
      <strong>Twitter/X:</strong> <%= safe_url(@contact_info.twitter_url) ? link_to(@contact_info.twitter_url, safe_url(@contact_info.twitter_url), target: "_blank", rel: "noopener", class: link_classes) : "Not set" %>
    </div>
    <div>
      <strong>Stack Overflow:</strong> <%= safe_url(@contact_info.stackoverflow_url) ? link_to(@contact_info.stackoverflow_url, safe_url(@contact_info.stackoverflow_url), target: "_blank", rel: "noopener", class: link_classes) : "Not set" %>
    </div>
    <div>
      <strong>Untapped:</strong> <%= safe_url(@contact_info.untapped_url) ? link_to(@contact_info.untapped_url, safe_url(@contact_info.untapped_url), target: "_blank", rel: "noopener", class: link_classes) : "Not set" %>
    </div>
  </div>
</div>
