<% content_for :title, "Edit Contact Info" %>

<div class="max-w-5xl mx-auto">
  <h1 class="<%= h1_classes %>">Edit Contact Info</h1>

  <%= form_with model: [:admin, @contact_info], local: true, class: "space-y-6" do |f| %>
    <% if @contact_info.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded p-4">
        <h2 class="text-red-800 font-semibold mb-2">Errors:</h2>
        <ul class="list-disc list-inside text-red-700">
          <% @contact_info.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.email_field :email, class: admin_input_classes %>
    </div>

    <div>
      <%= f.label :github_url, "GitHub URL", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.url_field :github_url, class: admin_input_classes %>
    </div>

    <div>
      <%= f.label :linkedin_url, "LinkedIn URL", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.url_field :linkedin_url, class: admin_input_classes %>
    </div>

    <div>
      <%= f.label :twitter_url, "Twitter/X URL", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.url_field :twitter_url, class: admin_input_classes %>
    </div>

    <div>
      <%= f.label :untapped_url, "Untapped", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.url_field :untapped_url, class: admin_input_classes %>
    </div>

    <div class="flex gap-4">
      <%= f.submit "Update Contact Info", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
      <%= link_to "Cancel", admin_contact_info_path, class: "px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300" %>
    </div>
  <% end %>
</div>
