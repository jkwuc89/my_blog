<%= form_with model: [:admin, presentation], local: true, class: "space-y-6" do |f| %>
  <% if presentation.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded p-4">
      <h2 class="text-red-800 font-semibold mb-2">Errors:</h2>
      <ul class="list-disc list-inside text-red-700">
        <% presentation.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :title, class: admin_input_classes %>
  </div>
  
  <div>
    <%= f.label :abstract, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_area :abstract, rows: 8, class: admin_input_classes %>
  </div>
  
  <div>
    <%= f.label :slides_url, "Slides", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.select :slides_url,
        options_for_select([['No slides', '']] + available_presentation_files.map { |f| [f, f] },
        presentation.slides_url),
        {},
        { class: admin_input_classes } %>
  </div>
  
  <div>
    <%= f.label :github_url, "GitHub URL", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.url_field :github_url, class: admin_input_classes %>
  </div>

  <div>
    <label class="block text-sm font-medium text-gray-700 mb-2">Conferences</label>
    <% if Conference.any? %>
      <div class="space-y-2 max-h-60 overflow-y-auto border border-gray-200 rounded-md p-4">
        <% Conference.order(:title, :year).each do |conference| %>
          <div class="flex items-center">
            <%= check_box_tag "presentation[conference_ids][]", conference.id, presentation.conferences.include?(conference), id: "conference_#{conference.id}", class: "mr-2" %>
            <%= label_tag "conference_#{conference.id}", "#{conference.title} (#{conference.year})", class: "text-sm text-gray-700" %>
          </div>
        <% end %>
        <%= hidden_field_tag "presentation[conference_ids][]", "" %>
      </div>
      <p class="mt-2 text-sm text-gray-500">Select one or more conferences where this presentation was given.</p>
    <% else %>
      <p class="text-gray-500">No conferences available. <%= link_to "Create a conference", new_admin_conference_path, class: link_classes %> first.</p>
    <% end %>
  </div>
  
  <div class="flex gap-4">
    <%= f.submit presentation.persisted? ? "Update Presentation" : "Create Presentation", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
    <%= link_to "Cancel", presentation.persisted? ? admin_presentation_path(presentation) : admin_presentations_path, class: "px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300" %>
  </div>
<% end %>

