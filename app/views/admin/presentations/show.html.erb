<% content_for :title, @presentation.title %>

<div class="max-w-5xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="<%= h1_classes %>"><%= @presentation.title %></h1>
    <div class="flex gap-2">
      <%= link_to "Edit", edit_admin_presentation_path(@presentation), class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
      <%= link_to "Back", admin_presentations_path, class: "px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300" %>
    </div>
  </div>

  <div class="bg-white border border-gray-200 rounded-lg p-6 space-y-4">
    <div>
      <strong>Abstract:</strong>
      <p class="mt-2 text-gray-700"><%= @presentation.abstract %></p>
    </div>

    <% if safe_url(@presentation.slides_url) %>
      <div>
        <strong>Slides URL:</strong>
        <%= link_to @presentation.slides_url, safe_url(@presentation.slides_url), target: "_blank", rel: "noopener", class: link_classes %>
      </div>
    <% end %>

    <% if safe_url(@presentation.github_url) %>
      <div>
        <strong>GitHub URL:</strong>
        <%= link_to @presentation.github_url, safe_url(@presentation.github_url), target: "_blank", rel: "noopener", class: link_classes %>
      </div>
    <% end %>

    <% if @presentation.conferences.any? %>
      <div>
        <strong>Conferences:</strong>
        <ul class="list-disc list-inside mt-2">
          <% @presentation.conferences.order(:title, :year).each do |conference| %>
            <li>
              <%= conference.title %> (<%= conference.year %>)
              <% if safe_url(conference.link) %>
                - <%= link_to "Conference Link", safe_url(conference.link), target: "_blank", rel: "noopener", class: link_classes %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <div>
        <strong>Conferences:</strong>
        <p class="text-gray-500 mt-2">No conferences associated with this presentation.</p>
      </div>
    <% end %>
  </div>
</div>
