<%= form_with model: [:admin, conference], local: true, class: "space-y-6" do |f| %>
  <% if conference.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded p-4">
      <h2 class="text-red-800 font-semibold mb-2">Errors:</h2>
      <ul class="list-disc list-inside text-red-700">
        <% conference.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :title, class: admin_input_classes %>
  </div>

  <div>
    <%= f.label :year, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.number_field :year, class: admin_input_classes, min: 1900, max: 2100 %>
  </div>

  <div>
    <%= f.label :link, "Link to Conference Site", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.url_field :link, class: admin_input_classes %>
    <p class="mt-2 text-sm text-gray-500">Optional: URL to the conference website.</p>
  </div>

  <div class="flex gap-4">
    <%= f.submit conference.persisted? ? "Update Conference" : "Create Conference", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
    <%= link_to "Cancel", conference.persisted? ? admin_conference_path(conference) : admin_conferences_path, class: "px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300" %>
  </div>
<% end %>

