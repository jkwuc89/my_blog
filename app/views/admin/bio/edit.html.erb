<% content_for :title, "Edit Bio" %>

<div class="max-w-5xl mx-auto">
  <h1 class="text-3xl font-bold mb-6">Edit Bio</h1>

  <%= form_with model: [:admin, @bio], local: true, class: "space-y-6" do |f| %>
    <% if @bio.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded p-4">
        <h2 class="text-red-800 font-semibold mb-2">Errors:</h2>
        <ul class="list-disc list-inside text-red-700">
          <% @bio.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :name, "Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :name, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      <p class="mt-2 text-sm text-gray-500">Name displayed in the header.</p>
    </div>

    <div>
      <%= f.label :brief_bio, "Brief Bio", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :brief_bio, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      <p class="mt-2 text-sm text-gray-500">Brief tagline displayed under the name in the header.</p>
    </div>

    <div>
      <%= f.label :content, "Bio Content (Markdown)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_area :content, rows: 15, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      <p class="mt-2 text-sm text-gray-500">You can use Markdown formatting here.</p>
    </div>

    <div>
      <%= f.label :resume_url, "Resume URL (GitHub raw link)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :resume_url, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "https://github.com/jkwuc89/my-blog/raw/main/resume.pdf" %>
    </div>

    <div class="flex gap-4">
      <%= f.submit "Update Bio", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
      <%= link_to "Cancel", admin_bio_path, class: "px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300" %>
    </div>
  <% end %>
</div>
